{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@core/*": ["src/core/*"],
      "@core/assets/*": ["src/core/assets/*"],
      "@core/components/*": ["src/core/components/*"],
      "@core/hooks/*": ["src/core/hooks/*"],
      "@core/lib/*": ["src/core/lib/*"],
      "@core/systems/*": ["src/core/systems/*"],
      "@core/state/*": ["src/core/state/*"],
      "@core/types/*": ["src/core/types/*"],
      "@game/*": ["src/game/*"],
      "@game/assets/*": ["src/game/assets/*"],
      "@game/components/*": ["src/game/components/*"],
      "@game/components/ui/*": ["src/game/components/ui/*"],
      "@game/components/world/*": ["src/game/components/world/*"],
      "@game/hooks/*": ["src/game/hooks/*"],
      "@game/systems/*": ["src/game/systems/*"],
      "@game/scenes/*": ["src/game/scenes/*"],
      "@game/state/*": ["src/game/state/*"],
      "@game/config/*": ["src/game/config/*"],
      "@styles/*": ["src/styles/*"],
      "@docs/*": ["docs/*"],
      "@docs/architecture/*": ["docs/architecture/*"],
      "@docs/research/*": ["docs/research/*"],
      "@public/*": ["public/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
