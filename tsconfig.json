{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@core": ["src/core/index"],
      "@core/*": ["src/core/*"],
      "@editor": ["src/editor/index"],
      "@editor/*": ["src/editor/*"],
      "@game": ["src/game/index"],
      "@game/*": ["src/game/*"]
    }
  },
  "include": ["src", "src/types", "src/game/scripts/script-api.d.ts"],
  "exclude": [
    "src/game/scripts/**/*.ts",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/__tests__/**"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
